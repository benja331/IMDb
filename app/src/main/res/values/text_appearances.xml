<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.IMDb.Button.Primary" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.IMDb.Button.Secondary" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/login_button_text_color_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.IMDb.TextField.SignUp" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="TextAppearance.IMDb.TextField.Login" parent="">
        <item name="fontFamily">@font/roboto_light_italic</item>
        <item name="android:fontFamily">@font/roboto_light_italic</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="TextAppearance.IMDb.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_light_italic</item>
        <item name="android:fontFamily">@font/roboto_light_italic</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="TextAppearance.IMDb.LoginLabel" parent="">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="TextAppearance.IMDb.LoginTitle" parent="">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/gray_100</item>
    </style>

    <style name="TextAppearance.IMDb.ItalicBody" parent="">
        <item name="android:fontFamily">@font/roboto_light_italic</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="TextAppearance.IMDb.DarkItalicBody" parent="">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="TextAppearance.IMDb.DarkBody" parent="">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="TextAppearance.IMDb.Link" parent="">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

</resources>
