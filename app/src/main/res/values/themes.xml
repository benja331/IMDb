<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IMDb" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_400</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_500</item>
        <item name="colorSecondaryVariant">@color/gray_800</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Backgrounds. -->
        <item name="background">@color/white</item>
        <item name="colorSurface">@color/gray_100</item>
        <item name="colorError">@color/deep_orange_900</item>

        <!-- OnBackgrounds. -->
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/gray_500</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar. -->
        <item name="android:statusBarColor">@color/yellow_400</item>

        <!-- Text Appearances. -->
        <item name="textAppearanceCaption">@style/TextAppearance.IMDb.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.IMDb.Button.Primary</item>

        <!-- Shape Appearances. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.IMDb.SmallComponent.Outlined</item>
    </style>
</resources>