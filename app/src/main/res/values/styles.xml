<?xml version="1.0" encoding="utf-8"?>
<resources >

    <style name="Widget.IMDb.Button.Primary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="layout_constraintWidth_max">@dimen/button_max_width</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.IMDb.Button.Primary</item>
    </style>
    <style name="ThemeOverlay.IMDb.Button.Primary" parent="">
        <item name="colorOnPrimary">@color/gray_800</item>
        <item name="textAppearanceButton">@style/TextAppearance.IMDb.Button.Primary</item>
    </style>

    <style name="Widget.IMDb.Button.Secondary" parent="@style/Widget.AppCompat.Button">
        <item name="layout_constraintWidth_max">@dimen/button_max_width</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/ic_btn_background_selector</item>
        <item name="android:textAppearance">@style/TextAppearance.IMDb.Button.Secondary</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
    </style>

    <style name="Widget.IMDb.TextInputLayout.Signup" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="layout_constraintWidth_max">@dimen/edittext_max_width</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.IMDb.TextInputLayout.SignUp</item>
        <item name="expandedHintEnabled">false</item>
    </style>
    <style name="ThemeOverlay.IMDb.TextInputLayout.SignUp" parent="">
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorOnSurface">@color/gray_800</item>
        <item name="android:textColorPrimary">@color/gray_500</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.IMDb.TextField.SignUp</item>
        <item name="textAppearanceCaption">@style/TextAppearance.IMDb.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="Widget.IMDb.TextInputEditText.Login" parent="">
        <item name="layout_constraintWidth_max">@dimen/edittext_max_width</item>
        <item name="android:background">@drawable/ic_editext_login_background</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.IMDb.TextField.Login</item>
    </style>

    <style name="Widget.IMDb.TextInputLayout.Search" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.IMDb.SmallComponent.Filled</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="iconTint">@color/gray_800</item>
        <item name="hintEnabled">false</item>
        <item name="startIconTint">@color/gray_500</item>
    </style>

    <style name="Widget.IMDb.TextInputEditText.Search" parent="">
        <item name="layout_constraintWidth_max">@dimen/edittext_max_width</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Widget.IMDb.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.IMDb.BottomNavigationView</item>
        <item name="android:background">@drawable/ic_navigation_background</item>
    </style>
    <style name="ThemeOverlay.IMDb.BottomNavigationView" parent="">
        <item name="colorOnSurfaceVariant">@color/white</item>
    </style>

</resources>